<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/_lookup_key"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <CheckedTextView
        android:id="@+id/cb_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New CheckedTextView"
        android:drawableLeft="@drawable/check_box"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:textColor="#ff4a4a4a"
        android:clickable="true" android:singleLine="true" />

    <LinearLayout
        android:id="@+id/list_row_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@+id/_id"
        android:orientation="vertical"
        android:layout_below="@+id/cb_title"
        android:layout_alignParentBottom="false">


    </LinearLayout>


</RelativeLayout>