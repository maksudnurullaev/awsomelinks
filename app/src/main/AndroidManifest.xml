<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.awsomelink" >

    <uses-sdk android:minSdkVersion="11" android:maxSdkVersion="18"  />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_CONTACTS" />
    <android:uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.awsomelink.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.awsomelink.InboxActivity"
            android:label="@string/Inbox"
            android:parentActivityName="com.awsomelink.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.awsomelink.MainActivity" />
        </activity>
        <activity
            android:name="com.awsomelink.OutboxActivity"
            android:label="@string/Outbox" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.awsomelink.MainActivity" />
        </activity>
    </application>

</manifest>
